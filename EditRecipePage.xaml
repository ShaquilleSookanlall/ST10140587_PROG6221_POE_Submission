<Page x:Class="ST10140587_PROG6221_POE.EditRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ST10140587_PROG6221_POE"
      Title="EditRecipePage">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="DarkSlateGray"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Teal"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Page.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="WhiteSmoke">
        <Grid Margin="20">
            <StackPanel>
                <TextBlock Text="Recipe Name" FontWeight="Bold" FontSize="16" Margin="10"/>
                <TextBox x:Name="RecipeNameTextBox" Width="200" Margin="5"/>

                <TextBlock Text="Total Calories:" FontWeight="Bold" FontSize="16" Margin="10"/>
                <TextBlock x:Name="TotalCaloriesTextBlock" FontSize="16" Margin="10"/>

                <TextBlock Text="Ingredients" FontWeight="Bold" FontSize="16" Margin="10"/>
                <DataGrid x:Name="IngredientsDataGrid" AutoGenerateColumns="False" Width="500" Height="200" Margin="10" SelectionChanged="IngredientsDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*"/>
                        <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="*"/>
                        <DataGridTextColumn Header="Calories" Binding="{Binding Calories}" Width="*"/>
                        <DataGridTextColumn Header="Food Group" Binding="{Binding FoodGroup}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="AddIngredientButton" Content="Add Ingredient" Width="150" Click="AddIngredientButton_Click"/>
                    <Button x:Name="EditIngredientButton" Content="Edit Ingredient" Width="150" Click="EditIngredientButton_Click"/>
                    <Button x:Name="RemoveIngredientButton" Content="Remove Ingredient" Width="150" Click="RemoveIngredientButton_Click"/>
                </StackPanel>

                <TextBlock Text="Steps" FontWeight="Bold" FontSize="16" Margin="10"/>
                <ListBox x:Name="StepsListBox" Width="500" Height="200" Margin="10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="AddStepButton" Content="Add Step" Width="150" Click="AddStepButton_Click"/>
                    <Button x:Name="EditStepButton" Content="Edit Step" Width="150" Click="EditStepButton_Click"/>
                    <Button x:Name="RemoveStepButton" Content="Remove Step" Width="150" Click="RemoveStepButton_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button x:Name="SaveRecipeButton" Content="Save Recipe" Width="200" Click="SaveRecipeButton_Click"/>
                    <Button Content="Back" Width="200" Click="BackButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
