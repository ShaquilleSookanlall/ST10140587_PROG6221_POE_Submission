<Page x:Class="ST10140587_PROG6221_POE.EditStepPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ST10140587_PROG6221_POE"
      Title="EditStepPage">
    <StackPanel Margin="20">
        <TextBox x:Name="StepTextBox" Width="400" Height="200" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" Tag="Enter step description" Style="{StaticResource PlaceholderTextBoxStyle}"/>
        <Button Content="Save" Width="100" Margin="10" Click="SaveStepButton_Click"/>
        <Button Content="Back" Width="100" Margin="10" Click="BackButton_Click"/>
    </StackPanel>
</Page>
