<Page x:Class="ST10140587_PROG6221_POE.AddStepPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ST10140587_PROG6221_POE"
      Title="AddStepPage">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <StackPanel>
                <TextBox x:Name="StepTextBox" Width="300" Margin="10" Tag="Enter step" Style="{StaticResource PlaceholderTextBoxStyle}"/>
                <Button x:Name="SaveStepButton" Content="Save Step" Width="200" Margin="10" Click="SaveStepButton_Click"/>
                <Button Content="Back" Width="200" Margin="10" Click="BackButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
