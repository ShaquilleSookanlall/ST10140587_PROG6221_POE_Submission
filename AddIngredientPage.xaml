<Page x:Class="ST10140587_PROG6221_POE.AddIngredientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ST10140587_PROG6221_POE"
      Title="AddIngredientPage">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <StackPanel>
                <TextBox x:Name="IngredientNameTextBox" Width="200" Margin="10" Tag="Enter ingredient name" Style="{StaticResource PlaceholderTextBoxStyle}"/>
                <TextBox x:Name="IngredientQuantityTextBox" Width="200" Margin="10" Tag="Enter quantity" Style="{StaticResource PlaceholderTextBoxStyle}"/>
                <TextBox x:Name="IngredientUnitTextBox" Width="200" Margin="10" Tag="Enter unit" Style="{StaticResource PlaceholderTextBoxStyle}"/>
                <TextBox x:Name="IngredientCaloriesTextBox" Width="200" Margin="10" Tag="Enter calories" Style="{StaticResource PlaceholderTextBoxStyle}"/>
                <TextBox x:Name="IngredientFoodGroupTextBox" Width="200" Margin="10" Tag="Enter food group" Style="{StaticResource PlaceholderTextBoxStyle}"/>
                <Button x:Name="SaveIngredientButton" Content="Save Ingredient" Width="200" Margin="10" Click="SaveIngredientButton_Click"/>
                <Button Content="Back" Width="200" Margin="10" Click="BackButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
