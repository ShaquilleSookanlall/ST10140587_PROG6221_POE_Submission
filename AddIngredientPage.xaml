<Page x:Class="ST10140587_PROG6221_POE.AddIngredientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddIngredientPage">
    <StackPanel Margin="20">
        <TextBlock Text="Add Ingredient" FontWeight="Bold" FontSize="20" Margin="10"/>
        <TextBlock Text="Ingredient Name" Margin="10,0,0,0"/>
        <TextBox x:Name="IngredientNameTextBox" Width="200" Margin="10"/>
        <TextBlock Text="Quantity" Margin="10,0,0,0"/>
        <TextBox x:Name="IngredientQuantityTextBox" Width="200" Margin="10"/>
        <TextBlock Text="Unit" Margin="10,0,0,0"/>
        <TextBox x:Name="IngredientUnitTextBox" Width="200" Margin="10"/>
        <TextBlock Text="Calories" Margin="10,0,0,0"/>
        <TextBox x:Name="IngredientCaloriesTextBox" Width="200" Margin="10"/>
        <TextBlock Text="Food Group" Margin="10,0,0,0"/>
        <TextBox x:Name="IngredientFoodGroupTextBox" Width="200" Margin="10"/>
        <Button Content="Save" Width="100" Margin="10" Click="SaveIngredientButton_Click"/>
        <Button Content="Back" Width="100" Margin="10" Click="BackButton_Click"/>
    </StackPanel>
</Page>
