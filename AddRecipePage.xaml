<Page x:Class="ST10140587_PROG6221_POE.AddRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddRecipePage">
    <Grid>
        <StackPanel>
            <TextBox x:Name="RecipeNameTextBox" Width="200" Margin="10" Tag="Enter recipe name"/>
            <TextBox x:Name="IngredientDetailsTextBox" Width="300" Margin="10" Tag="Enter ingredient details"/>
            <TextBox x:Name="IngredientCaloriesTextBox" Width="200" Margin="10" Tag="Enter calories"/>
            <Button x:Name="AddIngredientButton" Content="Add Ingredient" Width="200" Margin="10" Click="AddIngredientButton_Click"/>
            <TextBox x:Name="StepTextBox" Width="200" Margin="10" Tag="Enter step"/>
            <Button x:Name="AddStepButton" Content="Add Step" Width="200" Margin="10" Click="AddStepButton_Click"/>
            <Button x:Name="SaveRecipeButton" Content="Save Recipe" Width="200" Margin="10" Click="SaveRecipeButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
