<Page x:Class="ST10140587_PROG6221_POE.EditIngredientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EditIngredientPage">
    <StackPanel Margin="20">
        <TextBlock Text="Edit Ingredient" FontWeight="Bold" FontSize="20" Margin="10"/>
        <TextBox x:Name="IngredientNameTextBox" Width="200" Margin="10" Tag="Enter ingredient name"/>
        <TextBox x:Name="IngredientQuantityTextBox" Width="200" Margin="10" Tag="Enter ingredient quantity"/>
        <TextBox x:Name="IngredientUnitTextBox" Width="200" Margin="10" Tag="Enter ingredient unit"/>
        <TextBox x:Name="IngredientCaloriesTextBox" Width="200" Margin="10" Tag="Enter ingredient calories"/>
        <TextBox x:Name="IngredientFoodGroupTextBox" Width="200" Margin="10" Tag="Enter ingredient food group"/>
        <Button Content="Save" Width="100" Margin="10" Click="SaveIngredientButton_Click"/>
        <Button Content="Back" Width="100" Margin="10" Click="BackButton_Click"/>
    </StackPanel>
</Page>
